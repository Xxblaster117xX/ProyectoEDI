@page "/listarMensaje"
@using BusinessLogic
@inject MessageManager MessageManager
@inject NavigationManager Navigation
<PageTitle>Listar Mensaje</PageTitle>
<h3 class="text-center">Listado de Mensajes:</h3>
<div class="container">
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr >
                <th class="text-center">Id</th>
                <th class="text-center">Tipo de Mensaje</th>
                <th class="text-center">Versión</th>
                <th class="text-center">Release</th>
                <th class="text-center">Directorio</th>
                <th class="text-center">Nombre</th>
                <th class="text-center">Descripción</th>
                
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (MessageManager.GetAllMessages() != null && MessageManager.GetAllMessages().Count > 0)
            {
                @foreach (var message in MessageManager.GetAllMessages())
                {
                    <tr>
                        <td class="text-center">@message.Id</td>
                        <td class="text-center">@message.Type</td>
                        <td class="text-center">@message.Version</td>
                        <td class="text-center">@message.Release</td>
                        <td class="text-center">@message.DirectoryVersion</td>
                        <td class="text-center">@message.Name</td>
                        <td class="text-center">@message.Description</td>
                        <td class="text-center">
                            <button class="btn btn-success" @onclick="() => GoToMessageDetails(message.Id)" >Ver Mensaje</button>
                            <button class="btn btn-warning">Modificar</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No existen mensajes</td>
                </tr>
            }
        </tbody>
    </table>

    
</div>
@code {

    public void GoToMessageDetails(int id)
    {
        Navigation.NavigateTo($"/mensajeDetails/{id}");
    }


}
