@page "/listarMensaje"
@using ProyectoEDI.Components.Services
@inject MessageService MessageService
<PageTitle>Listar Mensaje</PageTitle>
<h3 class="text-center">Listado de Mensajes:</h3>
<div class="container">
    <table class="table table-striped table-bordered">
        <thead class="table-primary">
            <tr >
                <th class="text-center">Tipo de Mensaje</th>
                <th class="text-center">Versión</th>
                <th class="text-center">Release</th>
                <th class="text-center">Directorio</th>
                <th class="text-center">Nombre</th>
                <th class="text-center">Descripción</th>
                
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @if (MessageService.GetMessages()!= null && MessageService.GetMessages().Count>0)
            {
                @foreach (var message in MessageService.GetMessages())
                {
                    <tr>
                        <td class="text-center">@message.MessageType</td>
                        <td class="text-center">@message.MessageVersion</td>
                        <td class="text-center">@message.MessageRelease</td>
                        <td class="text-center">@message.MessageDirectoryVersion</td>
                        <td class="text-center">@message.MessageName</td>
                        <td class="text-center">@message.MessageDescription</td>
                        <td class="text-center">
                            <button class="btn btn-success">Ver Mensaje</button>
                            <button class="btn btn-warning">Modificar</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center">No existen mensajes</td>
                </tr>
            }
        </tbody>
    </table>

    
</div>
