@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Message { get; set; }
    [Parameter] public EventCallback<bool> OnConfirmation { get; set; }

    private bool IsVisible { get; set; }

    public void Show()
    {
        IsVisible = true;
        StateHasChanged();
    }

    private async Task Confirm(bool value)
    {
        IsVisible = false;
        await OnConfirmation.InvokeAsync(value);
    }
}

@if (IsVisible)
{
    <div class="modal-overlay">
        <div class="modal-content">
            <h4>@Title</h4>
            <p>@Message</p>
            <button class="btn btn-primary" @onclick="() => Confirm(true)">Aceptar</button>
            <button class="btn btn-secondary" @onclick="() => Confirm(false)">Cancelar</button>
        </div>
    </div>
}
